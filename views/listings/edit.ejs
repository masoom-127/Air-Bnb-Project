<% layout('/layout/boiler.ejs') %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">

        <div class="card shadow p-4 mb-5">
          <h3 class="mb-4 text-center">Edit Listing</h3>

          <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="needs-validation" novalidate
            enctype="multipart/form-data">

            <!-- TITLE -->
            <div class="mb-3">
              <label class="form-label">Title</label>
              <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>" required>
              <div class="invalid-feedback">Title is required</div>
            </div>

            <!-- DESCRIPTION -->
            <div class="mb-3">
              <label class="form-label">Description</label>
              <textarea name="listing[description]" class="form-control" rows="3"
                required><%= listing.description %></textarea>
              <div class="invalid-feedback">Description is required</div>
            </div>

            <!-- IMAGE -->
            <div class="mb-3">
              original listing image <br>
              <img src="<%= listing.image.url %>" alt="preview" style="width:100px; height:auto;">
            </div>


            <div class="mb-3">
              <label class="form-label">Image URL</label>
              <input type="file" name="listing[image]" class="form-control" value="<%= listing.image.url %>">
              <div class="invalid-feedback">Valid image URL required</div>
            </div>

            <!-- PRICE -->
            <div class="mb-3">
              <label class="form-label">Price</label>
              <input type="number" name="listing[price]" class="form-control" value="<%= listing.price %>" min="1"
                required>
              <div class="invalid-feedback">Price must be greater than 0</div>
            </div>

            <!-- LOCATION -->
            <div class="mb-3">
              <label class="form-label">Location</label>
              <input type="text" name="listing[location]" class="form-control" value="<%= listing.location %>" min="1"
                required>
              <div class="invalid-feedback">Location is required</div>
            </div>

            <!-- COUNTRY -->
            <div class="mb-4">
              <label class="form-label">Country</label>
              <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>" required>
              <div class="invalid-feedback">Country is required</div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                Update Listing
              </button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>

  <script src="/js/script.js"></script>