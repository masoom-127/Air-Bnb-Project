<% layout('/layout/boiler.ejs') -%>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

      <div class="card shadow p-4">
        <h3 class="mb-4 text-center">Add New Listing</h3>

        <!-- Form with client-side validation (Bootstrap) -->
        <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

          <!-- Title -->
          <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input 
              type="text" 
              name="listing[title]" 
              class="form-control" 
              placeholder="Enter title" 
              required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid title.</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea 
              name="listing[description]" 
              class="form-control" 
              rows="4" 
              placeholder="Write a short description" 
              required></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please provide a description.</div>
          </div>

          <!-- Image URL (optional) -->
          <!-- <div class="mb-3">
            <label for="image" class="form-label">Image URL <small class="text-muted">(optional)</small></label>
            <input 
              type="text" 
              name="listing[image]" 
              class="form-control" 
              placeholder="https://example.com/image.jpg">
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid URL.</div>
          </div> -->

          <div class="mb-3">
            <label for="image" class="form-label">upload the image <small class="text-muted">(optional)</small></label>
            <input 
              type="file" 
              name="listing[image]" 
              class="form-control" 
              >
             
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label for="price" class="form-label">Price (₹)</label>
            <input 
              name="listing[price]" 
              class="form-control" 
              min="0" 
              step="1" 
              placeholder="1500" 
              required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a valid price (≥ 0).</div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input 
              type="text" 
              name="listing[location]" 
              class="form-control" 
              placeholder="e.g., Goa, India" 
              required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a location.</div>
          </div>

          <!-- Country -->
          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input 
              type="text" 
              name="listing[country]" 
              class="form-control" 
              placeholder="e.g., India" 
              required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a country.</div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid mt-4">
            <button type="submit" class="btn btn-dark btn-lg">
              Create Listing
            </button>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>